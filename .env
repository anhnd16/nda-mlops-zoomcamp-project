# MLflow
MLFLOW_TRACKING_URI=http://127.0.0.1:5000
MLFLOW_EXPERIMENT_NAME=adult-income
MLFLOW_MODEL_NAME=adult_income_classifier

# GCP
GOOGLE_APPLICATION_CREDENTIALS=secrets/sa_key.json
GCP_PROJECT_ID=nda-de-zoomcamp
GCP_REGION=asia-southeast1
GCS_BUCKET=nda-mlops-zoomcamp-bucket
GCS_BLOB=uci/adult.data
ARTIFACT_REGISTRY=aisa-southeast1-docker.pkg.dev/your-project-id/mlops-repo
CLOUD_RUN_SERVICE=adult-income-svc

# Alerts
# SLACK_WEBHOOK_URL=
PUBSUB_TOPIC=model-alerts

# Serving
PORT=8080

# Drift monitoring paths 
REF_DATA=/app/data/splits/train.csv
CUR_DATA=/app/data/current.csv
REPORT_DIR=/app/reports
MONITOR_WINDOW_SECS=86400  # 24h

# Enable capture in serving (runs on host or container)
CAPTURE_ENABLED=true
CAPTURE_PATH=data/capture/events.csv